@model CarrinhoCompraViewModel

<h3>Seu Carrinho de compras:</h3>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>Quantidade</th>
            <th>Lanche</th>
            <th class="text-right">Preço</th>
            <th class="text-right">Subtotal</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems )
        {
            <tr>
                <td>@item.Quantidade</td>
                <td>@item.Lanche.Nome</td>
                <td>@item.Lanche.Preco.ToString("c")</td>
                <td>@(item.Lanche.Preco * @item.Quantidade).ToString("c")</td>
                <td><a asp-controller="CarrinhoCompra" asp-action="RemoverDoCarrinho" asp-route-lancheId="@item.Lanche.id" class="btn btn-danger">Remover</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div class="row">
    <div class="col-md-2">
        <a asp-controller="Pedido" asp-action="Checkout" href="#" class="btn btn-primary">Btn 1</a>
    </div>
    <div class="col-md-2">
        <a asp-controller="Lanche" asp-action="List" class="btn btn-danger">Btn 2</a>
    </div>
    
</div>